<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutDemoApp.StackLayoutDemo1"
             Padding="0,20,0,0"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Center" Spacing="20">
            <Label Text="Welcome to Xamarin"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label Text="Cross-Platform apps made easy" 
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Button Text=" Login" BackgroundColor="#1dabf0" TextColor="White" />
            <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>