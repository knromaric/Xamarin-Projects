<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutDemoApp.StackLayout_insta">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Spacing="20">
            <StackLayout Padding="10,20,0,0">
                <Label Text="Cmr_Photographer" FontSize="20"/>
            </StackLayout>
            <StackLayout>
                <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
            </StackLayout>

            <StackLayout Padding="10,0,10,0" Orientation="Horizontal" Spacing="25">
                <Button Text="Like" />
                <Button Text="Comment" />
                <Button Text="Share" />
            </StackLayout>

            <StackLayout Padding="10,0,10,0" >
                <BoxView Color="#f0f0f0" HeightRequest="1" />
                <Label Text="700 likes" FontAttributes="Bold" FontSize="Medium"/>
                <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in denmark"
                       FontSize="Medium"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>